sum = 0
# User inputs to determine the number range
LowerLimit = int(input("Enter the beginning of the range : "))
UpperLimit = int(input("Enter the end of the range : "))

print("The odd numbers are as follows :")
# for loop to search for the odd numbers within the user given range
for LowerLimit in range(LowerLimit, UpperLimit + 1):
    # % 2 == 1 check if number is odd
    if LowerLimit % 2 == 1:
        print(LowerLimit)
        # calculate sum
        sum += LowerLimit
    continue
# increase the number by 1
LowerLimit += 1
# output the sum of odd numbers
print("Sum is :", sum)
